        </VisualBrush>
        <VisualBrush 
      x:Key="DefaultID76Brush" TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute" Viewbox="0,0,10,10" ViewboxUnits="Absolute">
