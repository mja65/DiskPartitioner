<Grid x:Name="Partition" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp14"
    mc:Ignorable="d"
    Grid.Column="4" Grid.Row="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2" ></ColumnDefinition>
            <ColumnDefinition x:Name="FullSpace" Width="96"></ColumnDefinition>
            <ColumnDefinition Width="2" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2" ></RowDefinition>
            <RowDefinition Height="96"></RowDefinition>
            <RowDefinition Height="2" ></RowDefinition>
        </Grid.RowDefinitions>
            <Rectangle x:Name="TopBorder_Rectangle" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="0" Stroke="Black" StrokeThickness="5" />
            <Rectangle x:Name="BottomBorder_Rectangle" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="3" Stroke="Black" StrokeThickness="5" />
            <Rectangle x:Name="LeftBorder_Rectangle" Grid.RowSpan="3" Grid.Column="0" Grid.Row ="0" Stroke="Black" StrokeThickness="5" />
            <Rectangle x:Name="RightBorder_Rectangle" Grid.RowSpan="3" Grid.Column="2" Grid.Row ="0" Stroke="Black" StrokeThickness="5" />
            <Rectangle x:Name="FullSpace_Rectangle" Grid.ColumnSpan="1" Fill="#FF3B67A2" Grid.Row="1" Grid.Column="1"/>
</Grid>