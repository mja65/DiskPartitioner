  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:WpfApp14"
  mc:Ignorable="d">
        <TextBlock x:Name="StartPage_TextBlock" HorizontalAlignment="Left" Margin="0,100,0,0" TextWrapping="Wrap"  FontSize="16" VerticalAlignment="Top" Width="1000" Height="800">
            <Run FontWeight="Bold" FontSize="14" Text="Mode of Operation - Advanced Mode"/>
            <LineBreak/>    
            <Run/><LineBreak/>        
            <Run Text="In order to use this tool, click the buttons on the left side of the screen."/>
            <LineBreak/>
            <Run/><LineBreak/>            
            <Run FontWeight="Bold" Text="Start "/>
            <Run Text="- this page"/><LineBreak/>
            <Run/><LineBreak/>
            <Run FontWeight="Bold" Text="Set up Disk"/>
            <Run Text=" - Select the disk or image to write to, define the size, as well as partioning the disk and image according to your requirements"/><LineBreak/>
            <Run/><LineBreak/>
            <Run FontWeight="Bold" Text="Configure Emu68"/>
            <Run Text=" - Configure Emu68 options"/><LineBreak/>
            <Run/><LineBreak/>
