        <DataGridTextColumn Header="Description" Binding="{Binding PackageNameDescription}"/>
        <DataGridTextColumn Header="PackageNameDefaultInstall" Binding="{Binding PackageNameDefaultInstall}" Visibility = "Hidden"/>
    </DataGrid.Columns>

</DataGrid>
       
    </Grid>


    