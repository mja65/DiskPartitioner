   <Grid x:Name="Window_PackageSelection" Background="#FFE5E5E5" Margin="200,0,0,0" Height="800" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Visible"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:local="clr-namespace:WpfApp14"
   mc:Ignorable="d">
       <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="516">
       If you want to change any of the packages selected for installation, unselect or select the relevant row. Note, if you decide you want this later on you will need to manually install it! 
       </TextBlock>
       <DataGrid Name="Datagrid" CanUserAddRows="False" HorizontalAlignment="Center" AutoGenerateColumns="False" Margin="0,200,0,0" Height="500" VerticalAlignment="Top" HorizontalScrollBarVisibility="Auto" GridLinesVisibility="None" HorizontalGridLinesBrush="#FF505050" VerticalGridLinesBrush="#FF505050"  >
           <DataGrid.Columns>
               <DataGridCheckBoxColumn  Header="Select Package for Installation" Binding="{Binding PackageNameUserSelected}" Width="175"/>
               <DataGridTextColumn Header="Name of Package" Binding="{Binding PackageNameFriendlyName}" Width="165"/>
               <DataGridTextColumn Header="Package Type" Binding="{Binding PackageNameGroup}" Width="140"/>
               <DataGridTextColumn Header="Description" Binding="{Binding PackageNameDescription}" Width="480"/>
               <DataGridTextColumn Header="PackageNameDefaultInstall" Binding="{Binding PackageNameDefaultInstall}" Visibility = "Hidden"/>
           </DataGrid.Columns>

       </DataGrid>

   </Grid>


    